<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:background="@drawable/sign_in"
    >
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="@drawable/sign_in"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:background="@drawable/back_arrow"
            android:layout_alignBaseline="@id/icon"
            android:layout_alignStart="@id/name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/person_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/small_margin"
            android:id="@+id/icon"/>

        <EditText
            android:layout_width="@dimen/edit_text_width"
            android:layout_height="@dimen/edit_text_height"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/icon"
            android:background="@drawable/edit_text_border"
            android:hint="Full Name"
            android:id="@+id/name"
            android:inputType="text"
            android:padding="@dimen/medium_padding"
            android:layout_marginTop="@dimen/small_margin"/>
        <EditText
            android:layout_width="@dimen/edit_text_width"
            android:layout_height="@dimen/edit_text_height"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/name"
            android:background="@drawable/edit_text_border"
            android:hint="Email"
            android:id="@+id/email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/medium_padding"
            android:layout_marginTop="@dimen/small_margin"/>
        <Spinner
            android:layout_width="@dimen/edit_text_width"
            android:layout_height="@dimen/edit_text_height"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/email"
            android:background="@drawable/edit_text_border"
            android:id="@+id/gender"
            android:padding="@dimen/medium_padding"
            android:layout_marginTop="@dimen/small_margin"
            />
        <EditText
            android:layout_width="@dimen/edit_text_width"
            android:layout_height="@dimen/edit_text_height"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/gender"
            android:background="@drawable/edit_text_border"
            android:hint="+961-xx/xxxxxx"
            android:id="@+id/phoneNb"
            android:inputType="phone"
            android:padding="@dimen/medium_padding"
            android:layout_marginTop="@dimen/small_margin"/>
        <Spinner
            android:layout_width="@dimen/edit_text_width"
            android:layout_height="@dimen/edit_text_height"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/phoneNb"
            android:background="@drawable/edit_text_border"
            android:id="@+id/role"
            android:padding="@dimen/medium_padding"
            android:layout_marginTop="@dimen/small_margin"/>
        <Spinner
            android:layout_width="@dimen/edit_text_width"
            android:layout_height="@dimen/edit_text_height"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/role"
            android:id="@+id/area"
            android:background="@drawable/edit_text_border"
            android:padding="@dimen/medium_padding"
            android:layout_marginTop="@dimen/small_margin"/>
        <EditText
            android:layout_width="@dimen/edit_text_width"
            android:layout_height="@dimen/edit_text_height"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/area"
            android:background="@drawable/edit_text_border"
            android:hint="BirthDate"
            android:id="@+id/birthDate"
            android:inputType="datetime"
            android:padding="@dimen/medium_padding"
            android:layout_marginTop="@dimen/small_margin"/>
        <EditText
            android:layout_width="@dimen/edit_text_width"
            android:layout_height="@dimen/edit_text_height"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/birthDate"
            android:background="@drawable/edit_text_border"
            android:hint="Password"
            android:id="@+id/pass"
            android:inputType="textPassword"
            android:padding="@dimen/medium_padding"
            android:layout_marginTop="@dimen/small_margin"/>
        <EditText
            android:layout_width="@dimen/edit_text_width"
            android:layout_height="@dimen/edit_text_height"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/pass"
            android:background="@drawable/edit_text_border"
            android:hint="Confirm Password"
            android:id="@+id/confirmPass"
            android:inputType="textPassword"
            android:padding="@dimen/medium_padding"
            android:layout_marginTop="@dimen/small_margin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/error"
            android:layout_below="@id/confirmPass"
            android:layout_alignStart="@id/confirmPass"
            android:textColor="@color/red"
            android:textSize="15sp"
            android:textStyle="italic"
            android:visibility="invisible"
            android:layout_marginTop="@dimen/xx_small_margin"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/confirmPass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/medium_margin">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:text="Sign Up"
                android:textSize="@dimen/medium_text"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/createAccount"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signIn"
                android:text="Sign in"
                android:textColor="@color/black"
                android:textSize="@dimen/medium_text"
                android:layout_toEndOf="@id/createAccount"
                android:layout_alignBaseline="@id/createAccount"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/small_margin"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>