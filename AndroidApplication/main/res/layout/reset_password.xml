<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/iphone_13_p"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <TextView
        android:id="@+id/reset_password"
        android:layout_width="168dp"
        android:layout_height="73dp"
        android:layout_alignLeft="@id/email"
        android:layout_alignParentTop="true"
        android:layout_marginTop="180dp"
        android:gravity="start"
        android:text="Reset Password"
        android:textColor="@color/black"
        android:textSize="@dimen/header_text"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/email"
        android:layout_below="@id/reset_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/medium_margin"
        android:layout_width="@dimen/edit_text_width"
        android:padding="@dimen/medium_padding"
        android:layout_height="@dimen/edit_text_height"
        android:background="@drawable/text_border_purple"
        android:inputType="textEmailAddress"
        android:hint="Email" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/email"
        android:layout_below="@id/email"
        android:textColor="@color/black"
        android:id="@+id/resend"
        android:layout_marginTop="@dimen/edit_text_height"
        android:text="resend code"
        android:textStyle="italic"
        android:paddingLeft="@dimen/small_padding"
        android:textSize="@dimen/medium_text"
        />
    <Button
        android:id="@+id/send_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_alignLeft="@id/email"
        android:layout_marginTop="@dimen/medium_margin"
        android:backgroundTint="@color/purple"
        android:padding="@dimen/small_padding"
        android:text="send code"
        android:textColor="@color/black"
        android:layout_alignBaseline="@+id/resend"
        android:textSize="16sp"
        android:textStyle="bold" />
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/footer"
        android:padding="@dimen/small_padding">

        <Button
            android:id="@+id/profileIcon"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@drawable/profile_icon" />

        <Button
            android:id="@+id/searchIcon"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profileIcon"
            android:background="@drawable/search_icon"
            android:layout_marginStart="@dimen/medium_margin"/>

        <Button
            android:id="@+id/backIcon"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/searchIcon"
            android:layout_marginLeft="40sp"
            android:background="@drawable/back_arrow" />

        <Button
            android:id="@+id/logoutIcon"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/backIcon"
            android:layout_marginLeft="30sp"
            android:background="@drawable/logout_icon"
            android:backgroundTint="@color/purple"/>
    </RelativeLayout>
</RelativeLayout>
