<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/iphone_13_p"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@color/purple"
    >
    <RelativeLayout
        android:id="@+id/white_bck"
        android:layout_marginTop="@dimen/medium_large_margin"
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:background="@drawable/edit_text_border"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/carpenter"
            android:id="@+id/carpenter_img"
            android:contentDescription="carpenter image"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/carpenter_img"
            android:layout_centerHorizontal="true"
            android:id="@+id/dots">
            <TextView
                android:id="@+id/dot1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/dot"
                />
            <TextView
                android:id="@+id/dot2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_toEndOf="@id/dot1"
                android:background="@drawable/dot"
                />
            <TextView
                android:id="@+id/dot3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_toEndOf="@id/dot2"
                android:background="@drawable/dot"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/text_border_purple"
            android:layout_below="@id/dots"
            android:id="@+id/personalInfo"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignTop="@id/personalInfo"
            android:layout_marginStart="@dimen/small_margin"
            >
            <TextView
                android:id="@+id/freelancer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sara Zaaroor"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/large_text"
                />

            <TextView
                android:id="@+id/service_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="@dimen/medium_text"
                android:textColor="@color/black"
                android:text="Carpenter"

                />
            <TextView
                android:id="@+id/freelancer_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:text="sarazaaroor@gmail.com"
                android:textColor="@color/teal_700"
                android:textSize="@dimen/medium_text"

                />
            <TextView
                android:id="@+id/service_link_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="https://goo.gl/maps/kVL59Y9kCFwfrkwR8"
                android:textColor="@color/blue"
                android:textStyle="italic"
                />
            <TextView
                android:id="@+id/service_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="keserwan"
                android:textSize="@dimen/medium_text"
                android:textColor="@color/black"

                />
            <TextView
                android:id="@+id/freelancer_phoneNb"
                android:inputType="phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="81688282"
                android:textSize="@dimen/medium_text"
                android:textColor="@color/black"


                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/serviceDescription"
            android:layout_below="@id/personalInfo">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_margin"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/service_title"
                    android:textStyle="bold"
                    android:text="service title"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/black"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text"

                        android:text="since: "/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/service_add_date"
                        android:text="02/02/2022"
                        android:textSize="@dimen/small_text"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/teal_200"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/service_description"
                    android:textColor="@color/black"
                    android:paddingEnd="@dimen/small_padding"
                    android:text="fxhnsfghsh ,mglk dfsg klnms dsfklv mdf,v’lknsa l,v,ma fl,s vkl’s v ld vvsaj vloanl’v z vls advmv’ka vl’n vvak avn kanmv;an vnvk pavm kanvkmnasd;kn’vklasdmnvadsnmfms‘mgknlsknlsnmlkfmas;ldkmfkg;sk;gk;asgk;s"
                    android:maxLines="30"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="Feedbacks"
                android:textStyle="bold"
                android:textSize="@dimen/medium_text"
                android:background="@drawable/text_border_black"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/xx_small_margin"
                android:padding="@dimen/small_padding"
                android:id="@+id/feedbacks"/>
        </RelativeLayout>
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/footer"
        android:padding="@dimen/small_padding">

        <Button
            android:id="@+id/profileIcon"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@drawable/profile_icon" />

        <Button
            android:id="@+id/searchIcon"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profileIcon"
            android:background="@drawable/search_icon"
            android:layout_marginStart="@dimen/medium_margin"/>

        <Button
            android:id="@+id/backIcon"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/searchIcon"
            android:layout_marginLeft="40sp"
            android:background="@drawable/back_arrow" />

        <Button
            android:id="@+id/logoutIcon"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/backIcon"
            android:layout_marginLeft="30sp"
            android:background="@drawable/logout_icon"
            android:backgroundTint="@color/purple"/>
    </RelativeLayout>
</RelativeLayout>