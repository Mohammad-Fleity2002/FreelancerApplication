<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:background="@drawable/sign_in"
    >
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:background="@drawable/back_arrow"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginStart="@dimen/small_margin"/>

        <EditText
            android:layout_width="@dimen/edit_text_width"
            android:layout_height="@dimen/edit_text_height"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit_text_border"
            android:hint="Service Title"
            android:id="@+id/serviceTitle"
            android:inputType="text"
            android:padding="@dimen/medium_padding"
            android:layout_marginTop="@dimen/medium_large_margin"/>
        <Spinner
            android:layout_width="@dimen/edit_text_width"
            android:layout_height="@dimen/edit_text_height"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit_text_border"
            android:layout_below="@id/serviceTitle"
            android:id="@+id/serviceType"
            android:padding="@dimen/medium_padding"
            android:layout_marginTop="@dimen/medium_large_margin"/>
        <EditText
            android:layout_width="@dimen/edit_text_width"
            android:layout_height="@dimen/edit_text_height"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit_text_border"
            android:layout_below="@id/serviceType"
            android:hint="Link Location"
            android:id="@+id/serviceLinkLocation"
            android:inputType="text"
            android:padding="@dimen/medium_padding"
            android:layout_marginTop="@dimen/medium_large_margin"/>
        <Spinner
            android:layout_width="@dimen/edit_text_width"
            android:layout_height="@dimen/edit_text_height"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit_text_border"
            android:layout_below="@id/serviceLinkLocation"
            android:id="@+id/serviceArea"
            android:padding="@dimen/medium_padding"
            android:layout_marginTop="@dimen/medium_large_margin"/>
        <EditText
            android:layout_width="@dimen/edit_text_width"
            android:layout_height="@dimen/text_area_height"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit_text_border"
            android:layout_below="@id/serviceArea"
            android:hint="Service Description"
            android:id="@+id/serviceDescription"
            android:inputType="text"
            android:padding="@dimen/medium_padding"
            android:layout_marginTop="@dimen/medium_large_margin"/>
        <EditText
            android:layout_width="@dimen/edit_text_width"
            android:layout_height="@dimen/height_75"
            android:layout_centerHorizontal="true"
            android:background="@drawable/edit_text_border"
            android:layout_below="@id/serviceDescription"
            android:hint="Add Images"
            android:id="@+id/serviceImage"
            android:inputType="text"
            android:padding="@dimen/medium_padding"
            android:layout_marginTop="@dimen/medium_large_margin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/error"
            android:layout_below="@id/serviceImage"
            android:layout_alignStart="@id/serviceType"
            android:textColor="@color/red"
            android:textSize="15sp"
            android:textStyle="italic"
            android:visibility="invisible"
            android:layout_marginTop="@dimen/xx_small_margin"
            />

        <RelativeLayout
            android:layout_width="@dimen/edit_text_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/serviceImage"
            android:layout_centerHorizontal="true">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:text="Offer"
                android:textColor="@color/black"
                android:id="@+id/offerService"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/small_margin" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:text="cancel"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:id="@+id/cancelService"
                android:layout_marginTop="@dimen/small_margin" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>